@inherits ProjectComponentBase<TStore, TRepository, TModel>
@typeparam TStore
@typeparam TRepository
@typeparam TModel

<div class="row">
    <Conditional Condition="Model != null">
        <div class="col-4">
            <div class="mb-3">
                <label for="Name" class="form-label">
                    Name: <span class="text-danger">*</span>
                </label>
                <InputText @bind-Value="Model.Name"
                           DisplayName="Name"
                           id="Name"
                           name="Name"
                           class="form-control"
                           placeholder="Name" />
                <ValidationMessage For="@(() => Model.Name)" />
            </div>
            <div class="mb-3">
                <label for="Organization" class="form-label">
                    Organization: <span class="text-danger">*</span>
                </label>
                <InputSelect @bind-Value="Model.OrganizationId"
                             DisplayName="Organization"
                             id="Organization"
                             name="Organization"
                             class="form-select">
                    <option value="">-- Select --</option>
                    <option value="@UserStore.Model.PrivateKey">Private</option>
                    <Repeater Items="UserStore.Model.Organizations" Context="organization">
                        <option @key="organization" value="@organization.Id">@organization.Name</option>
                    </Repeater>
                </InputSelect>
                <ValidationMessage For="@(() => Model.OrganizationId)" />
            </div>

            <div class="mb-3">
                <label for="Rate" class="form-label">
                    Unit Rate: <span class="text-danger">*</span>
                </label>
                <InputNumber @bind-Value="Model.Settings.EstimateRate"
                             DisplayName="Rate"
                             id="Rate"
                             name="Rate"
                             class="form-control" />
                <ValidationMessage For="@(() => Model.Settings.EstimateRate)" />
            </div>

        </div>
        <div class="col-8">
            <div class="mb-3">
                <label for="Description" class="form-label">
                    Description:
                </label>
                <InputTextArea @bind-Value="Model.Description"
                               DisplayName="Description"
                               id="Description"
                               name="Description"
                               class="form-control"
                               rows="10"
                               placeholder="Description" />
                <ValidationMessage For="@(() => Model.Description)" />
            </div>
        </div>
    </Conditional>
</div>



