
<div class="table-responsive">
    <table class="table table-striped table-hover table-condensed" style="table-layout: fixed">
        <colgroup>
            <col style="width: 200px" />
            <col style="width: 300px" />
            <col style="width: 90px" />
            <col style="width: 90px" />
        </colgroup>
        <thead>
            <tr>
                <th>
                    <a ng-click="viewModel.sortClick('Name')"
                       style="display: block;">
                        Name
                        <span class="ng-hide dropdown"
                              ng-show="viewModel.result.Sort == 'Name'"
                              ng-class="{true:'dropdown', false:'dropup'}[viewModel.result.Descending]">
                            <span class="caret" style="margin: 5px 5px;"></span>
                        </span>
                    </a>
                </th>
                <th>
                    <a ng-click="viewModel.sortClick('Email')"
                       style="display: block;">
                        Email Address
                        <span class="ng-hide dropdown"
                              ng-show="viewModel.result.Sort == 'Email'"
                              ng-class="{true:'dropdown', false:'dropup'}[viewModel.result.Descending]">
                            <span class="caret" style="margin: 5px 5px;"></span>
                        </span>
                    </a>
                </th>
                <th>
                    <a ng-click="viewModel.sortClick('Created')"
                       style="display: block;">
                        Created
                        <span class="ng-hide dropdown"
                              ng-show="viewModel.result.Sort == 'Created'"
                              ng-class="{true:'dropdown', false:'dropup'}[viewModel.result.Descending]">
                            <span class="caret" style="margin: 5px 5px;"></span>
                        </span>
                    </a>
                </th>
                <th>
                    <a ng-click="viewModel.sortClick('Updated')"
                       style="display: block;">
                        Updated
                        <span class="ng-hide dropdown"
                              ng-show="viewModel.result.Sort == 'Updated'"
                              ng-class="{true:'dropdown', false:'dropup'}[viewModel.result.Descending]">
                            <span class="caret" style="margin: 5px 5px;"></span>
                        </span>
                    </a>
                </th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="user in viewModel.result.Data">
                <td>
                    <a class="nowrap" style="display: block" href="User/Edit/{{user.Id}}" title="{{user.Name}}">{{user.Name}}</a>
                </td>
                <td>{{user.Email}}</td>
                <td>
                    <abbr title="{{user.Created | date:'fullDate'}}">
                        <span>{{user.Created | date:'MM/dd/yyyy'}}</span>
                    </abbr>
                </td>
                <td>
                    <abbr title="{{user.Updated | date:'fullDate'}}">
                        <span>{{user.Updated | date:'MM/dd/yyyy'}}</span>
                    </abbr>
                </td>
            </tr>
        </tbody>
    </table>
</div>
<uib-pagination ng-model="viewModel.result.Page"
                total-items="viewModel.result.Total"
                items-per-page="viewModel.result.PageSize"
                max-size="10"
                class="pagination"
                boundary-links="true"
                rotate="false"
                previous-text="&lsaquo;"
                next-text="&rsaquo;"
                first-text="&laquo;"
                last-text="&raquo;"
                ng-change="viewModel.load()">
</uib-pagination>
